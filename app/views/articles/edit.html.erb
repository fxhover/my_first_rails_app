<h2>编辑</h2>
<form action="/articles/update" method="post">
<input type="hidden" name="id" value="<%= @article.id %>"/>
<table>
          <tr>
            <td>title:</td>
            <td><input type="text" name="title" value="<%= @article.title %>" size="100"/></td>
          </tr>
          <tr>
            <td>description:</td>
            <td><textarea name="description" cols="72" rows="20"><%= @article.description %></textarea></td>
          </tr>
          <tr>
            <td>href:</td>
            <td><input type="text" name="content" value="<%= @article.content %>" size="100"/></td>
          </tr>
          <tr>
            <td colspan="2"><input type="submit" value="update" style="height:30px;width:100px;padding: 20px 15px 10px 15px;"/></td>
          </tr>
</table>
</form>